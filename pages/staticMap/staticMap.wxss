/* pages/staticMap/staticMap.wxss */
.img-box {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  overflow: hidden;
}
.img-box .canvas-block{
  width: 100%;
  height: 100%;
}
.canvas-operate {
  position: absolute;
  overflow: visible;
  left: 0;
  margin-left: 100%;
  top: calc(100% - 40px - 180px);
  z-index: 99;
}
.canvas-mask {
  position: absolute;
  top: 3px;
  left: 0;
  right: 0;
  bottom: 0;
  background: #e9d7bb; 
  opacity: 0.5;
  /* background: rgba(0, 0, 0, 0.1); */
  color: #fff;
  text-align: center;
  padding-top: 50%;
  box-sizing: border-box;
}
.operate-button {
  position: relative;
  width: 100px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background: #ffa500;
  color: #ffffff;
  z-index: 100;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  border: 1px #e9d7bb solid;
  font-size: 15px;
}