  </cover-view>

  <cover-view class="cover-option">
    <cover-view>
      <cover-view class="checkbox selected">
        <cover-view class="icon"></cover-view>
        <cover-view class="text">123333</cover-view>
      </cover-view>
    </cover-view>
  </cover-view> -->
  
</view>
<view class="map-option"> 
  <checkbox-group bindchange="checkboxChangeHandle">
    <checkbox wx:for="{{checkboxGroup}}"  wx:key="{{item.value}}" checked="{{item.checked}}" value="{{index}}">{{item.name}}</checkbox>
  </checkbox-group>
  <view class="btn-buttom" bindtap="toStaticMap">下一步</view>
</view>